<div class="debate-title">
  <h1><span>議題:</span><%= @debate.title %></h1>
  <p><%= @debate.body %></p>
</div>

<%= form_for([@debate, @debate.comments.build]) do |f| %>
  <ul class="comment-create-form">
    <li class="comment-form-name">
      <%= f.text_field :name, placeholder: "名前" %>
    </li>
    <li class="comment-form-age">
      <%= f.number_field :age, placeholder: "年齢" %>
    </li>
    <li  class="comment-form-profession">
      <%= f.text_field :profession, placeholder: "職業" %>
    </li>
    <li  class="comment-form-message">
      <%= f.text_field :message, placeholder: "コメントを入力してください。" %>
    </li>
    <li  class="comment-form-submit">
      <%= f.submit "送信"%>
    </li>
  </ul>
<% end %>

<ul>
  <% @comments.each do |comment| %>
  <li class="comment-contents">
    <div class="comment-profile">
      <p>名前:<span><%= comment.name %></span></p>
      <p>年齢:<span><%= comment.age %></span></p>
      <p>職業:<span><%= comment.profession %></span></p>
      <p>送信日時:<span><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></span></p>
    </div>
    <h3><%= comment.message %><h3>
  </li>
  <% end %>
</ul>